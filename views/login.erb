<h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Login</h2>
<% if @erro %>
  <p class="text-red-500 mb-4"><%= @erro %></p>
<% end %>
<form action="/login" method="post" class="space-y-4">
  <label for="nome" class="block text-gray-700 font-medium">E-mail:</label>
  <input type="text" name="nome" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
  
  <label for="senha" class="block text-gray-700 font-medium">Senha:</label>
  <input type="password" name="senha" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
  
  <button type="submit" class="w-full py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Entrar</button>
</form>
